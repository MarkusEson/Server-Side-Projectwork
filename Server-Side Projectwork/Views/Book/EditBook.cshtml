@model Service.Models.Book

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Session["UserSession"] != null)
{
    using (Html.BeginForm("EditBook", "Book", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <h1>
            Edit Book.
        </h1>
        <div>
            <h1 class="errorMessage">@TempData["Error"]</h1>
        </div>

        <hr />

        <div class="form-horizontal">
        
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.Label("ISBN", "ISBN", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(b => b.ISBN, new { htmlAttributes = new { @class = "form-control", @style = "width: 400px", @placeholder = "ISBN" } })
                    @Html.ValidationMessageFor(b => b.ISBN, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("Title", "Title", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(b => b.Title, new { htmlAttributes = new { @class = "form-control", @style = "width: 400px", @placeholder = "Title" } })
                    @Html.ValidationMessageFor(b => b.Title, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("PublicationYear", "Publication Year", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(b => b.PublicationYear, new { htmlAttributes = new { @class = "form-control", @style = "width: 400px", @placeholder = "Publication Year" } })
                    @Html.ValidationMessageFor(b => b.PublicationYear, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("Publicationinfo", "Publication Info", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(b => b.Publicationinfo, new { htmlAttributes = new { @class = "form-control", @style = "width: 400px", @placeholder = "Publication Info" } })
                    @Html.ValidationMessageFor(b => b.Publicationinfo, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("Pages", "Pages", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(b => b.Pages, new { htmlAttributes = new { @class = "form-control", @style = "width: 400px", @placeholder = "Pages" } })
                    @Html.ValidationMessageFor(b => b.Pages, "", new { @class = "text-danger" })
                </div>
            </div>
            <hr />

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Add" class="btn btn-default" formmethod="post" />
                </div>
            </div>

        </div>
    }

    <div>
        @Html.ActionLink("Back to List", "../Book/ListBooks")
    </div>
}









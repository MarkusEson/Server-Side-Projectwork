@model Service.Models.Book
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Session["UserName"] != null)
{
    using (Html.BeginForm("AddBook", "Book", FormMethod.Post))
    {
        <div class="form-horizontal">
            <h2>Add a Book to the database</h2>
            <hr />

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.Label("isbn", "ISBN", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.Editor("isbn", new { htmlAttributes = new { @class = "form-control", @style = "width: 400px", @placeholder = "ISBN" } })
                    @Html.ValidationMessage("isbn", "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("title", "Title", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.Editor("title", new { htmlAttributes = new { @class = "form-control", @style = "width: 400px", @placeholder = "Title" } })
                    @Html.ValidationMessage("title", "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("pyear", "Publication Year", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.Editor("pyear", new { htmlAttributes = new { @class = "form-control", @style = "width: 400px", @placeholder = "Publication Year" } })
                    @Html.ValidationMessage("pyear", "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("pinfo", "Publication Info", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.Editor("pinfo", new { htmlAttributes = new { @class = "form-control", @style = "width: 400px", @placeholder = "Publication Info" } })
                    @Html.ValidationMessage("pinfo", "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("pages", "Pages", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.Editor("pages", new { htmlAttributes = new { @class = "form-control", @style = "width: 400px", @placeholder = "Pages" } })
                    @Html.ValidationMessage("pages", "", new { @class = "text-danger" })
                </div>
            </div>
            <hr />

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Add" class="btn btn-default" formmethod="post" />
                </div>
            </div>

        </div>
    }

    <div>
        @Html.ActionLink("Back to List", "../Book")
    </div>
}
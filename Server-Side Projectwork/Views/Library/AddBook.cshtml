@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    ViewBag.Title = "AddBook";
}

<h2>Add a Book to the database</h2>

<form class="form-horizontal" action="~/Views/Library/Login.cshtml">
    <div class="form-group">
        <label class="col-sm-1">ISBN: </label>
        <div class="col-sm-2">
            @Html.TextBox("AddISBN", null, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-1">Title: </label>
        <div class="col-sm-2">
            @Html.TextBox("AddTitle", null, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-1">SignId: </label>
        <div class="col-sm-2">
            @Html.TextBox("AddSignId", null, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-1">Publication year: </label>
        <div class="col-sm-2">
            @Html.TextBox("AddPublicationYear", null, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-1">Publicaion info: </label>
        <div class="col-sm-2">
            @Html.TextBox("AddPublicationinfo", null, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-1">Pages: </label>
        <div class="col-sm-2">
            @Html.TextBox("AddPages", null, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-1 col-sm-10">
            <button type="submit" class="btn btn-default">Add Book</button>
        </div>
    </div>
</form>
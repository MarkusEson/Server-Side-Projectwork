@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    ViewBag.Title = "AddBook";
}

<h2>Add a Book to the database</h2>

<form class="form-horizontal" action="~/Views/Library/Login.cshtml">
    <div class="form-group">
        <label class="col-sm-1">Aid: </label>
        <div class="col-sm-2">
            @Html.TextBox("AddAid", null, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-1">First Name: </label>
        <div class="col-sm-2">
            @Html.TextBox("AddFirstName", null, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-1">Last Name: </label>
        <div class="col-sm-2">
            @Html.TextBox("AddLastName", null, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-1">Birth year: </label>
        <div class="col-sm-2">
            @Html.TextBox("AddBirthYear", null, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-1 col-sm-10">
            <button type="submit" class="btn btn-default">Add Book</button>
        </div>
    </div>
</form>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    ViewBag.Title = "Login";
}

<form class="form-horizontal" action="~/Views/Library/Login.cshtml">
    <div class="form-group">
        <label class="control-label col-sm-2">Username: </label>
        <div class="col-sm-10">
            @Html.TextBox("LoginUsername", null, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2">Password: </label>
        <div class="col-sm-10">
            @Html.TextBox("LoginPassword", null, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Login!</button>
        </div>
    </div>
</form>


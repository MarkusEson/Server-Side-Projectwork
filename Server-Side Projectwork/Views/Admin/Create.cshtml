@model IEnumerable<Service.Models.Administrator>


@{
    ViewBag.Title = "Create";
}

@if (Session["UserSession"] != null)
{
    using (Html.BeginForm("Create", "Admin", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        int i = 0;

        foreach (var item in Model)
        {
            i += 1;
        }

        <div class="form-horizontal">
            <h4>Administrator</h4>

            <hr />


            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.TextBox("adminId", 0, new { @readonly = "readonly", @hidden = "hidden" })

            <div class="form-group">
                @Html.Label("UserName", "Username", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.Editor("UserName", new { htmlAttributes = new { @class = "form-control", @style = "width: 400px", @placeholder = "Username" } })
                    @Html.ValidationMessage("UserName", "*", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("inPassword", "Password", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.Editor("inPassword", new { htmlAttributes = new { @class = "form-control", @style = "width: 400px", @placeholder = "Password" } })
                    @Html.ValidationMessage("inPassword", "*", new { @class = "text-danger" })
                </div>
            </div>

            <hr />

            <div class="form-group">
                @Html.Label("FirstName", "Firstname", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.Editor("FirstName", new { htmlAttributes = new { @class = "form-control", @style = "width: 400px", @placeholder = "Firstname" } })
                    @Html.ValidationMessage("FirstName", "optional", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("LastName", "Lastname", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.Editor("LastName", new { htmlAttributes = new { @class = "form-control", @style = "width: 400px", @placeholder = "Lastname" } })
                    @Html.ValidationMessage("LastName", "optional", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Description", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextArea("Description", new { @class = "form-control", @style = "width: 400px", @rows = "5", @placeholder = "Description" })
                    @Html.ValidationMessage("Description", "optional", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>

        </div>
    }

    <div>
        @Html.ActionLink("Back to List", "../Admin")
    </div>
}

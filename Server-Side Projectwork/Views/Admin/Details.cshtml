@model Service.Models.Administrator
@{
    ViewBag.Title = "Details";
}

<div id="nameDiv">
   <a>@Model.FirstName @Model.LastName</a>
</div>

<br />
<br />

<div id="descDiv">
    <a id="desc">@Model.Description</a>
</div>

@if (Session["UserSession"] != null)
{
    <a href="/Admin/Edit/@Model.AdminId" style="margin-top: 10px;" class="btn btn-default pull-left">Edit</a>

    using (Html.BeginForm("Delete", "Admin", FormMethod.Post))
    {
        <input type="hidden" name="id" value="@Model.AdminId"/>
        <input type="submit" value="Delete" style="margin-top: 10px; margin-left: 5px" class="btn btn-default" />
    }
}

<div>
    @Html.ActionLink("Back to List", "../Admin")
</div>
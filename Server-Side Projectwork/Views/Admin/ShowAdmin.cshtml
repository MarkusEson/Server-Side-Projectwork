@model Service.Models.Administrator
@{
    ViewBag.Title = "ShowAdmin";
}

<style>
    #nameDiv
    {
        height: 50px; 
        text-align: center; 
        border: 1px solid #000; 
        display: inline-block;
    }

    #nameDiv a
    {
        text-decoration: none;
        color: black;
        margin-left: 20px; 
        margin-right: 20px;
        font-size: xx-large;
    }

    #descDiv
    {
        width: 460px; 
        height: 100px; 
        text-align: center; 
        border: 1px solid #000; 
        border-radius: 8px;
        word-wrap: normal;
    }

    #descDiv a
    {
        text-decoration: none;
        color: black;
        margin-top: 10px;
    }
</style>

<div id="nameDiv">
   <a>@Model.FirstName @Model.LastName</a>
</div>

<br />
<br />

<div id="descDiv">
    <a id="desc">@Model.Description</a>
</div>

<a href="/Admin/Edit/@Model.AdminId" style="margin-top: 10px;" class="btn btn-default">Edit</a>
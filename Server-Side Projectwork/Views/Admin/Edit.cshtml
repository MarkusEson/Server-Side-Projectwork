@model Service.Models.Administrator

@{
    ViewBag.Title = "Edit";
}
<!--------BLOCK AREA----------->

@if(Session["UserSession"] != null)
{
    using (Html.BeginForm("Edit", "Admin", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Edit Admin</h4>

            <hr />
            @Html.ValidationSummary(true, "Fix errors")
            <div class="form-group">
                @Html.Label("adminId", "ID", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(a => a.AdminId, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled", @style = "width: 50px" } })
                    @Html.ValidationMessageFor(a => a.AdminId, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(a => a.FirstName, "Firstname", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(a => a.FirstName, new { htmlAttributes = new { @class = "form-control", @style = "width: 400px", @placeholder = "Firstname" } })
                    @Html.ValidationMessageFor(a => a.FirstName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(a => a.LastName, "Lastname", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(a => a.LastName, new { htmlAttributes = new { @class = "form-control", @style = "width: 400px", @placeholder = "Lastname" } })
                    @Html.ValidationMessageFor(a => a.LastName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(a => a.Description, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextAreaFor(a => a.Description, new { @class = "form-control", @style = "width: 400px", @rows = "5", @placeholder = "Description" })
                    @Html.ValidationMessageFor(a => a.Description, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
}


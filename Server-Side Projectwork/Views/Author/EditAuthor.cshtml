@model Service.Models.Author

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.AntiForgeryToken()

@if (Session["UserSession"] == null)
{
    using (Html.BeginForm("EditAuthor", "Author", FormMethod.Post))
    {
        <h1>
            Edit Author.
        </h1>
        <div>
            <h1 class="errorMessage">@TempData["Error"]</h1>
        </div>

        <hr />

        <div class="form-horizontal">
            
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.Label("Aid", "Author ID", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(x => x.Aid, new { htmlAttributes = new { @class = "form-control", @style = "width: 400px", @placeholder = "Author ID" } })
                    @Html.ValidationMessageFor(x => x.Aid, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("FirstName", "First Name", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(x => x.FirstName, new { htmlAttributes = new { @class = "form-control", @style = "width: 400px", @placeholder = "First Name" } })
                    @Html.ValidationMessageFor(x => x.FirstName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("LastName", "Last Name", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(x => x.LastName, new { htmlAttributes = new { @class = "form-control", @style = "width: 400px", @placeholder = "Last Name" } })
                    @Html.ValidationMessageFor(x => x.LastName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("BirthYear", "Birth Year", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(x => x.BirthYear, new { htmlAttributes = new { @class = "form-control", @style = "width: 400px", @placeholder = "Birth Year" } })
                    @Html.ValidationMessageFor(x => x.BirthYear, "", new { @class = "text-danger" })
                </div>
            </div>
            <hr />

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Add" class="btn btn-default" formmethod="post" />
                </div>
            </div>

        </div>
    }

    <div>
        @Html.ActionLink("Back to List", "../Author")
    </div>
}


@if (Session["UserSession"] != null)
{
    <p>You are not Authorized to view this page!</p>
}
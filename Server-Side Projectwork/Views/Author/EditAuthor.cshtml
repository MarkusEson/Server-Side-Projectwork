@model Service.Models.Author

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    ViewBag.Title = "EditAuthor";
}

@if (Session["UserName"] != null)
{
    <h2>Edit Author</h2>

    using (Html.BeginForm())
    {
        @:Aid: @Html.TextBox("aid", Model.Aid)<br>
        @:First Name: @Html.TextBox("fname", Model.FirstName)<br>
        @:Last Name: @Html.TextBox("lname", Model.LastName)<br>
        @:Birth Year: @Html.TextBox("byear", Model.BirthYear)<br>
        <input type="submit" value="Add" formmethod="post" /><br>
    }
}
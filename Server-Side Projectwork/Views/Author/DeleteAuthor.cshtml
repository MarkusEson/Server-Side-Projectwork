@model Service.Models.Author

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="form-horizontal">
    <div>
        <p> Are you sure you want to delete this Author?</p>

        <form method="post" action="/Author/DeleteAuthor">
            <input type="hidden" name="FirstName" value="@Model.FirstName">
            <input type="hidden" name="LastName" value="@Model.LastName">
            <input type="hidden" name="Aid" value="@Model.Aid">
            <input type="hidden" name="BirthYear" value="@Model.BirthYear">
            <button type="submit" class="btn btn-danger">Delete Author</button>
        </form>

    </div>

</div>

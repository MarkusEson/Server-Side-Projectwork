@model Service.Models.Author
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    ViewBag.Title = "AddAuthor";
}

@if (Session["UserName"] != null)
{
    <h2>Add a Book to the database</h2>


    using (Html.BeginForm())
    {
        @:First Name: @Html.TextBox("fname")<br>
        @:Last Name: @Html.TextBox("lname")<br>
        @:Birth Year: @Html.TextBox("byear")<br>
        <input type="submit" value="Add" formmethod="post" /><br>
    }
}